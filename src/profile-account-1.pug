include includes/head.pug

body

  #site
    include includes/header.pug

    main(role="main").main
      section.profile-layout
        .container.profile-layout__container
          aside.profile-aside.profile-layout__aside
            .profile-aside__header
              h1.profile-aside__header-title Профиль
              a(href="#").profile-aside__header-login логин
              button(type="button").sm-visible.js-toggle-aside-nav.profile-aside__header-btn-toggle
                svg.icon
                  use(xlink:href="./images/sprite.svg#toggle-aside-nav")
            nav.profile-aside__nav
              ul.profile-aside__nav-list
                li.profile-aside__nav-item.is-active
                  a(href="profile-account-1.html").profile-aside__nav-link Аккаунт
                li.profile-aside__nav-item
                  a(href="profile-account-2.html").profile-aside__nav-link Настройки
                li.profile-aside__nav-item
                  a(href="profile-account-3.html").profile-aside__nav-link Скрытые вилки
                li.profile-aside__nav-item
                  a(href="profile-account-4.html").profile-aside__nav-link Букмекеры
                li.profile-aside__nav-item
                  a(href="profile-account-5.html").profile-aside__nav-link История ставок
                li.profile-aside__nav-item
                  a(href="profile-account-6.html").profile-aside__nav-link Платежи
                li.profile-aside__nav-item
                  a(href="profile-account-7.html").profile-aside__nav-link Партнерская программа
          .profile-main.profile-layout__main
            .profile-main__account-list
              .profile-settings-card.profile-main__account-list-card
                .profile-settings-card__header
                  .profile-settings-card__title Ваши подписки
                  a(href="#").btn.btn--theme-dark.btn--size-st.profile-settings-card__btn Купить/продлить подписку
                table.profile-settings-card__subscription
                  thead
                    tr
                      th Тариф
                      th Истекает (UTC)
                      th Доступные дни заморозки
                      th Статус
                  tbody
                    tr
                      td(data-table-title-mobile="Тариф") Название тарифа
                      td(data-table-title-mobile="Истекает (UTC)") 27.06.22, 13:15
                      td(data-table-title-mobile="Доступные дни заморозки") 15
                      td(data-table-title-mobile="Статус") Активная 
                         a(href="#").profile-settings-card__subscription-stop Заморозка
                p.profile-settings-card__subscription-description Вы можете заморозить выбранную подписку неограниченное кол-во раз, но сумма дней не может превышать значение по умолчанию для тарифа. Если Вы разморозили подписку раньше срока, от подписки будет вычтен 1&nbsp;день (сутки). Если срок действия подписки меньше одних суток, то заморозка недоступна.
              .profile-settings-card.profile-main__account-list-card
                .profile-settings-card__header
                  .profile-settings-card__title Промокоды
                form(action="#").profile-settings-card__promocode
                  input(type="text", name="promocode", placeholder="Введите промокод для активации (не обязательно)").input-el.input-el--size-md.input-el--theme-white.profile-settings-card__promocode-input
                  button(type="submit").btn.btn--theme-dark.btn--size-st.profile-settings-card__promocode-btn Активировать
              .profile-settings-card.profile-main__account-list-card
                .profile-settings-card__header
                  .profile-settings-card__title Изменение информации
                form(action="#").profile-settings-card__edit
                  input(type="text", name="name", placeholder="Имя").input-el.input-el--size-md.input-el--theme-white.profile-settings-card__edit-input.profile-settings-card__edit-input--w-50
                  input(type="text", name="email", placeholder="E-mail").input-el.input-el--size-md.input-el--theme-white.profile-settings-card__edit-input.profile-settings-card__edit-input--w-50
                  input(type="password", name="password_new", placeholder="Новый пароль").input-el.input-el--size-md.input-el--theme-white.profile-settings-card__edit-input.profile-settings-card__edit-input--w-50
                  input(type="password", name="password_new_repeat", placeholder="Подтверждение пароля").input-el.input-el--size-md.input-el--theme-white.profile-settings-card__edit-input.profile-settings-card__edit-input--w-50
                  input(type="password", name="password_current", placeholder="Для подтверждения новых изменений, введите текущий пароль").input-el.input-el--size-md.input-el--theme-white.profile-settings-card__edit-input.profile-settings-card__edit-input--w-100
                  button(type="submit").btn.btn--theme-dark.btn--size-st.profile-settings-card__edit-btn Обновить информацию

    include includes/footer.pug

